<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00FF00"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the Number"
        android:textColor="#FFFF00"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Think of a number from 0-10000 in your mind"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />


    <TextView
        android:id="@+id/guessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is your number 5000?"
        android:textColor="#FF0000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/guessInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guesses Left: 15"
        android:textColor="#FFA500"
        android:textSize="18sp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btnLess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LESS"
        android:textColor="#FFFF00"
        android:backgroundTint="#FF0000"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnGreater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREATER"
        android:textColor="#FFFF00"
        android:backgroundTint="#0000FF"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EQUAL"
        android:textColor="#FFFF00"
        android:backgroundTint="#FFA500" />
</LinearLayout>
